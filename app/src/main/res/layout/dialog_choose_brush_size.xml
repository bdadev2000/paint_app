<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D1C4E9"
    >

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_brush_size"
        android:background="#4DB6AC"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/btn_brush_small"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/brush_small"
        app:layout_constraintTop_toBottomOf="@+id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_brush_medium"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/btn_brush_medium"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/brush_small"
        app:layout_constraintTop_toBottomOf="@+id/btn_brush_small"
        app:layout_constraintBottom_toTopOf="@+id/btn_brush_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/btn_brush_big"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/brush_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_brush_medium"
        android:layout_marginTop="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>